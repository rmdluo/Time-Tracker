{
  "name": "Time Tracker",
  "version": "2.0",
  "manifest_version": 2,
  "background":
  	{
  		"scripts": ["background.js"],
  		"persistant": true
  	},
  "permissions": [
  	"tabs",
    "storage",
    "*://*/*"
  ],
  "browser_action": {
  	"default_popup": "/popup/popup.html"
  },
  "icons": {"16": "/images/icon16.png",
  			"48": "/images/icon48.png",
  		   "128": "/images/icon128.png"
  },
  "options_ui": {
    "page": "/options/options-blocked-sites.html"
  },
  "web_accessible_resources": [
    "blocked.html"
  ]
}
